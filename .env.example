# Django settings
DEBUG=False
SECRET_KEY=your-very-long-and-secret-key-here-change-in-production
ALLOWED_HOSTS=babygoodsdealer.com,www.babygoodsdealer.com

# Database
DATABASE_URL=postgresql://username:password@host:5432/babygoods

# Redis (optional, for caching)
REDIS_URL=redis://host:6379/1

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@babygoodsdealer.com

# Wagtail settings
WAGTAILADMIN_BASE_URL=https://babygoodsdealer.com

# Media and static files (for production)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=

# Security settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Custom domain (if not using babygoodsdealer.com)
DOMAIN=babygoodsdealer.com